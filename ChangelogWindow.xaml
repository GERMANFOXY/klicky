<Window x:Class="Klicky.ChangelogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Changelog" Height="400" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border Padding="20" CornerRadius="10" Background="#222" BorderBrush="#FFD871" BorderThickness="1.5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Was ist neu in Klicky?" Foreground="#FFD871" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ChangelogText" Foreground="White" FontSize="14" TextWrapping="Wrap" />
            </ScrollViewer>
            <Button Grid.Row="2" Content="SchlieÃŸen" Width="100" Margin="0,20,0,0" Click="CloseButton_Click" />
        </Grid>
    </Border>
</Window>
